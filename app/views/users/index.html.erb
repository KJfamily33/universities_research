<h1>Listing users</h1>
<div class="well"
  <h4>Nothing here yet, be sure to click on a college name and see what you get.</h4>
</div> 
<table cellpadding=12 width = "75" class="table table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user, :class => 'btn' %></td>
    <td><%= link_to 'Edit', edit_user_path(user), :class => 'btn' %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

